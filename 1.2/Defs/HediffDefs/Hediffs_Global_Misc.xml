<?xml version="1.0" encoding="utf-8" ?>
<Defs>



	<HediffDef>
		<defName>MM_ToxicBite</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
		<description>Toxins in the bloodstream. This can come from various sources, including environmental toxins, venomous bites, or poisoned weapons.
\nAt high doses, toxic buildup is lethal. Even at low doses, it can generate cancers.
\nContrary to base game toxic buildup, creatures who die with this toxic damage can be eaten.</description>
		<label>toxic buildup</label>
		<lethalSeverity>1</lethalSeverity>
		<makesSickThought>true</makesSickThought>
		<scenarioCanAdd>true</scenarioCanAdd>
		<taleOnVisible>ToxicityRevealed</taleOnVisible>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>-0.08</severityPerDayNotImmune>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>

			</li>
			<li>
				<label>initial</label>
				<minSeverity>0.04</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.2</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.40</minSeverity>
				<vomitMtbDays>5</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Dementia</hediff>
						<mtbDays>146</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Carcinoma</hediff>
						<mtbDays>438</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>serious</label>
				<minSeverity>0.60</minSeverity>
				<vomitMtbDays>1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.25</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Dementia</hediff>
						<mtbDays>37</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Carcinoma</hediff>
						<mtbDays>111</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.80</minSeverity>
				<vomitMtbDays>0.5</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.10</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Dementia</hediff>
						<mtbDays>13</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Carcinoma</hediff>
						<mtbDays>39</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="InjuryBase">
		<defName>MM_AcidicBurn</defName>
		<label>acidic burn</label>
		<labelNoun>an acidic burn</labelNoun>
		<description>A splash of acid that continues to cause burn wounds for quite some time after the initial attack.</description>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<labelTendedWell>bandaged</labelTendedWell>
				<labelTendedWellInner>sutured</labelTendedWellInner>
				<labelSolidTendedWell>set</labelSolidTendedWell>
			</li>
			<li Class="HediffCompProperties_Infecter">
				<infectionChance>0.1</infectionChance>
			</li>
			<li Class="HediffCompProperties_GetsPermanent">
				<permanentLabel>acidic burn scar</permanentLabel>
			</li>
		</comps>
		<injuryProps>
			<painPerSeverity>0.01875</painPerSeverity>
			<averagePainPerSeverityPermanent>0.00625</averagePainPerSeverityPermanent>
			<canMerge>true</canMerge>
			<destroyedLabel>Burned off</destroyedLabel>
			<destroyedOutLabel>Burned out</destroyedOutLabel>
		</injuryProps>
	</HediffDef>

	<HediffDef ParentName="DiseaseBase">
		<defName>MM_Grabbed</defName>
		<description>This creature is being grabbed and can't move properly.</description>
		<label>grabbed</label>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>
					<min>200</min>
					<max>200</max>
				</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.9</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>partially immobilized</label>
				<minSeverity>0.2</minSeverity>

				<capMods>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.6</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>grabbed</label>
				<minSeverity>0.5</minSeverity>

				<capMods>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.4</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>grabbed tight</label>
				<minSeverity>0.8</minSeverity>

				<capMods>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.25</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>MM_BleedingWound</defName>
		<hediffClass>AnimalBehavioursAndEvents.Hediff_BleedingWound</hediffClass>
		<defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
		<description>A bleeding wound that continues to cause blood loss for quite some time after the initial attack.</description>
		<label>bleeding wounds</label>
		<lethalSeverity>1</lethalSeverity>
		<makesSickThought>true</makesSickThought>

		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>-4</severityPerDayNotImmune>
			</li>
		</comps>
		<stages>


			<li>
				<label>bleeding wounds, minor</label>
				<minSeverity>0</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>bleeding wounds, moderate</label>
				<minSeverity>0.40</minSeverity>
				<vomitMtbDays>5</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>

			</li>
			<li>
				<label>bleeding wounds, serious</label>
				<minSeverity>0.60</minSeverity>
				<vomitMtbDays>1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.4</offset>
					</li>
				</capMods>

			</li>

		</stages>
	</HediffDef>

	<HediffDef ParentName="InjuryBase">
		<defName>MM_OpenWound</defName>
		<label>open wound</label>
		<description>An open wound.</description>
		<labelNoun>an open wound</labelNoun>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<labelTendedWell>bandaged</labelTendedWell>
				<labelTendedWellInner>sutured</labelTendedWellInner>
				<labelSolidTendedWell>set</labelSolidTendedWell>
			</li>
			<li Class="HediffCompProperties_Infecter">
				<infectionChance>0.15</infectionChance>
			</li>
			<li Class="HediffCompProperties_GetsPermanent">
				<permanentLabel>stab scar</permanentLabel>
			</li>
		</comps>
		<injuryProps>
			<painPerSeverity>0.0125</painPerSeverity>
			<averagePainPerSeverityPermanent>0.00625</averagePainPerSeverityPermanent>
			<bleedRate>0.06</bleedRate>
			<canMerge>false</canMerge>
			<destroyedLabel>Cut off</destroyedLabel>
			<destroyedOutLabel>Cut out</destroyedOutLabel>
		</injuryProps>
	</HediffDef>

	<HediffDef ParentName="DiseaseBase">
		<defName>MM_Petrification</defName>
		<description>The victim's skin is hardening and turning into brittle stone. This condition is reversible and will naturally dissipate after a few hours, but if it reaches a severity of 1 it will kill its victim.</description>
		<label>petrification</label>
		<lethalSeverity>1</lethalSeverity>
		<makesSickThought>true</makesSickThought>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>
					<min>15000</min>
					<max>20000</max>
				</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.9</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>stiff joints</label>
				<minSeverity>0.2</minSeverity>

				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.6</setMax>

					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.75</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>rocky skin</label>
				<minSeverity>0.5</minSeverity>

				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.5</setMax>
					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.5</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>brittle bones</label>
				<minSeverity>0.8</minSeverity>

				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.4</setMax>
					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.2</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>turned to stone</label>
				<minSeverity>0.99</minSeverity>

				
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef>
		<defName>MM_FenghuangHediff</defName>
		<label>peace and tranquility</label>
		<makesSickThought>false</makesSickThought>
		<description>A Fenghuang is soothing this person with waves of positive energy. It increases manipulation and moving stats for 12 hours.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(92,62,198)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="VanillaCookingExpanded.HediffCompProperties_WhileHavingThoughts">
				<thoughtDefs>

					<li>MM_FenghuangThought</li>
				</thoughtDefs>
			</li>
		</comps>
		<stages>
			<li>   
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.1</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>



</Defs>