<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="ModCheck.isModLoaded">
				<modName>Giddy-up! Battle Mounts</modName>
				<yourMod>Magical Menagerie</yourMod>
			</li>



			
			
			<li Class="PatchOperationAddModExtension">
				<xpath>/Defs/ThingDef[defName = "MM_Griffin"]</xpath> 
				<value>
					<li Class="GiddyUpCore.CustomStatsPatch">
						<!--Speed factor.  -->
						<speedModifier>1.25</speedModifier>
						<!--Armor factor.  -->
						<armorModifier>1.25</armorModifier>
						<!--Setting useMetalArmor to true, makes the animal's skin have the metal bounce of effect when hit when used as mount --> 
						<useMetalArmor>false</useMetalArmor>
					</li>
				</value>
			</li>
			
						<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "MM_Griffin"]/comps</xpath> 
				<value>
					<li Class="GiddyUpCore.CompProperties_Overlay">
						<overlaySide> 
							<graphicDataDefault>
								<texPath>Things/Pawn/Animal/MM_Griffin/MM_Saddle_Griffin_east</texPath>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>3.5</drawSize>
								<drawRotated>false</drawRotated>
								
							</graphicDataDefault>					
							<offsetDefault>(0,0,0,0)</offsetDefault>
						</overlaySide>
						<overlayFront> 
							<graphicDataDefault>
								<texPath>Things/Pawn/Animal/MM_Griffin/MM_Saddle_Griffin_south</texPath>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>3.5</drawSize>
								<drawRotated>false</drawRotated>
								
							</graphicDataDefault>					
							<offsetDefault>(0,0,0,0)</offsetDefault>
						</overlayFront>
						<overlayBack> 
							<graphicDataDefault>
								<texPath>Things/Pawn/Animal/MM_Griffin/MM_Saddle_Griffin_north</texPath>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>3.5</drawSize>
								<drawRotated>false</drawRotated>
								
							</graphicDataDefault>					
							<offsetDefault>(0,0,0,0)</offsetDefault>
						</overlayBack>

					</li>
				</value>
			</li>


		</operations>
	</Operation>


</Patch>

