<Defs>


  <ThingDef ParentName="LeatherBase">
    <defName>MM_LightMagicalLeather</defName>
    <label>light magical leather</label>
    <description>The strong furry leather of a bear. Compared to most leather, it is quite a bit tougher and a bit better at all kinds of temperature regulation.</description>
    <graphicData>
      <color>(203,167,107)</color>
    </graphicData>
    <statBases>
      <MarketValue>3.4</MarketValue>
      <StuffPower_Armor_Sharp>1.3</StuffPower_Armor_Sharp>
      <StuffPower_Insulation_Cold>22</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>20</StuffPower_Insulation_Heat>
    </statBases>
    <stuffProps>
      <color>(203,167,107)</color>
      <commonality>0</commonality>
    </stuffProps>
  </ThingDef>



  <ThingDef ParentName="LeatherBase">
    <defName>MM_HeavyMagicalLeather</defName>
    <label>heavy magical leather</label>
    <description>Tanned, dried, scraped rhinocerous skin. It is exceptionally durable in combat, but provides little protection from weather.</description>
    <graphicData>
      <color>(66,62,49)</color>
    </graphicData>
    <statBases>
      <MarketValue>4.5</MarketValue>
      <StuffPower_Armor_Sharp>1.5</StuffPower_Armor_Sharp>
	  <StuffPower_Armor_Blunt>0.29</StuffPower_Armor_Blunt>
      <StuffPower_Insulation_Cold>30</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>20</StuffPower_Insulation_Heat>
    </statBases>
    <stuffProps>
      <color>(66,62,49)</color>
      <commonality>0</commonality>
      <statFactors>
        <MaxHitPoints>1.7</MaxHitPoints>
      </statFactors>
    </stuffProps>
  </ThingDef>

  

</Defs>
